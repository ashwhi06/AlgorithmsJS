function truncateString(str, num) {
  // Clear out that junk in your trunk
 var newValue ="" ;
  if(str.length > num){ //determine if str length is greater than num
    newValue = str.slice(0, num - 3) + "..."; //if the given maximum string length num is less than or equal to 3, then the addition of the three dots
    return newValue;
  }
  return str;
}

truncateString("A-tisket a-tasket A green and yellow basket", 11);
